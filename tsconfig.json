{
    "compilerOptions": {
        "outDir": "build",
        "target": "ES2018",
        "incremental": true,
        "strict": true,
        "declaration": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "lib": ["ESNext"],
        "pretty": true,
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "module": "CommonJS"
    }
}
